---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import { getCollection } from "astro:content";

const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const last_posts = posts.slice(0, 3);
---

<BaseLayout>

    <div class="pb-12 mt-5">
      <div class="text-xl py-1">GM ✨</div>
      <div class="text-5xl font-bold">My name is Gee</div>
      <div class="text-3xl py-3 font-bold">Front End Web Developer</div>
      <div class="py-2">
        <text class="text-lg">
          My proudest achievement is to be able to maximize and utilize an era of open information accessibility.
          </text>
      </div>
      <div class="mt-8">
        <a class="btn" href="https://www.linkedin.com/in/sahatsawat-kerdsawad" target="_blank">Let's connect!</a>
        <a href="https://github.com/GrungeElFz" target="_blank" class="btn btn-outline ml-5">Github</a>
      </div>
    </div>

    <div>
      <div class="text-3xl w-full font-bold mb-2">My Lastest Projects {"</>"}</div>
    </div>

    <HorizontalCard
      title="Spotify Clone • SvelteKit"
      img="/post_img.webp"
      desc="SvelteKit • TypeSctipt • JavaScript • SCSS • HTML • Vite • Spotify Web API"
      url="https://sveltekit-spotify-clone-livid.vercel.app"
      badge="NEW"
    />
    <div class="divider my-0"></div>
    <HorizontalCard
    title="Landing Page • 0x01000111"
    img="/post_img.webp"
    desc="0x01000111 - Techno Producer • Disc Jockey"
    url="https://www.instagram.com/0x01000111"
    badge="Under Development"
  />
    <div class="divider my-0"></div>
    <HorizontalCard
    title="Personal Site • Astro" 
    img="/post_img.webp"
    desc="Astro • TypeScript • Tailwind • DaisyUI • Markdown • HTML"
    url="#"
  />


    <div>
      <div class="text-3xl w-full font-bold mb-5 mt-10">Latest posts</div>
    </div>

    {
      last_posts.map((post) => (
        <HorizontalCard
          title={post.data.title}
          img={post.data.heroImage}
          desc={post.data.description}
          url={"/blog/" + post.slug}
          target="_self"
          badge={post.data.badge}
        />
        <div class="divider my-0"></div>
      ))
    }

</BaseLayout>
