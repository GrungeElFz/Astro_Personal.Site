---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import { getCollection } from "astro:content";

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
const last_posts = posts.slice(0, 3);
---

<BaseLayout>
  <div class="pb-12 mt-5">
    <div class="text-xl py-1">GM ✨</div>
    <div class="text-5xl font-bold">My name is Gee</div>
    <div class="text-3xl py-3 font-bold">Front-End Web Developer</div>

    <div class="py-2">
      <text class="text-lg">
        My proudest achievements is utilizing my ability to maximize the immense
        potential in the era of open information accessibility.
      </text>
    </div>

    <div class="mt-8">
      <a
        class="btn"
        href="https://linkedin.com/in/grunge-delviora"
        target="_blank">Let's connect!</a
      >
      <a
        href="https://github.com/GrungeElFz"
        target="_blank"
        class="btn btn-outline ml-5">Github</a
      >
    </div>
  </div>

  <div>
    <div class="text-3xl w-full font-bold mb-2">
      My Lastest Projects {"</>"}
    </div>
  </div>
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Floatingpoint."
    img="/Banner-Astro_floatingpoint.png"
    desc="An underground music organization platform with a proven track record of at-capacity event attendance | Built by Astro • TypeScript • ShadcnUI • Vite • Bun"
    url="https://github.com/GrungeElFz/Astro_floatingpoint."
    badge="NEW"
    class="lighthouse-score"
  >
    <ul class="list-disc bullet-dark">
      <li class="badge badge-primary">Performance: 100</li>
      <li class="badge badge-primary badge-outline">Accessibility: 85</li>
      <li class="badge badge-primary badge-outline">Best Practices: 56</li>
      <li class="badge badge-primary">SEO: 100</li>
    </ul>
  </HorizontalCard>

  <HorizontalCard
    title="Git Editor Selector"
    img="/Banner-Git_Editor.Selector_Ice.png"
    desc="Dynamic Shell Scripts to Switch Git Editors Across Multiple IDEs | Built with Bash"
    url="https://github.com/GrungeElFz/Git_Editor.Selector"
    badge="UNDER DEVELOPMENT"
  />

  <HorizontalCard
    title="LiQuid Dreams"
    img="/Banner-Liquid.Dreams.png"
    desc="A space for deep connection and self-expression through underground music | Built by Astro • TailwindCSS • MDX"
    url="https://github.com/GrungeElFz/Astro_Liquid.Dreams"
    class="lighthouse-score"
  >
    <ul class="list-disc bullet-dark">
      <li class="badge badge-primary badge-outline">Performance: 95</li>
      <li class="badge badge-primary">Accessibility: 100</li>
      <li class="badge badge-primary badge-outline">Best Practices: 79</li>
      <li class="badge badge-primary">SEO: 100</li>
    </ul>
  </HorizontalCard>

  <div>
    <div class="text-3xl w-full font-bold mb-5 mt-10">My Latest Blog</div>
  </div>
  <div class="divider my-0"></div>

  {
    last_posts.map((post) => (
      <>
        <HorizontalCard
          title={post.data.title}
          img={post.data.heroImage}
          desc={post.data.description}
          url={"/blog/" + post.slug}
          target="_self"
          badge={post.data.badge}
        />
      </>
    ))
  }

  <div>
    <div class="text-3xl w-full font-bold mb-5 mt-10">Linkedin Feed</div>
  </div>
  <div class="divider mb-9"></div>

  <div class="embedded-post">
    <iframe
      src="https://www.linkedin.com/embed/feed/update/urn:li:ugcPost:7284707244540153856"
      height="428"
      width="504"
      allowfullscreen=""
      title="Embedded post"></iframe>
  </div>
</BaseLayout>

<style lang="scss">
  @use "@unsass/breakpoint";

  .embedded-post {
    position: relative;
    width: 100%;
    height: 100%;
    @include breakpoint.up("lg") {
      width: 100%;
      height: 50%;
      margin-bottom: 100%;
      padding-bottom: 25%;
    }
    @include breakpoint.down("lg") {
      width: 100%;
      height: 50%;
      margin-bottom: 100%;
      padding-bottom: 20%;
    }
    @include breakpoint.down("md") {
      width: 100%;
      height: 0;
      margin-bottom: 0;
      padding-bottom: 100%;
    }
    iframe {
      width: 100%;
      height: 100%;
      @include breakpoint.up("lg") {
        position: relative;
      }
      @include breakpoint.down("md") {
        position: absolute;
      }
    }
  }
</style>
