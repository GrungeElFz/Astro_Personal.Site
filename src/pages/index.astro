---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import { getCollection } from "astro:content";

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const last_posts = posts.slice(0, 3);
---

<BaseLayout>
  <div class="pb-12 mt-5">
    <div class="text-xl py-1">GM ✨</div>
    <div class="text-5xl font-bold">My name is Gee</div>
    <div class="text-3xl py-3 font-bold">Front End Web Developer</div>
    <div class="py-2">
      <text class="text-lg">
        My proudest achievement is to be able to maximize and utilize an era of
        open information accessibility.
      </text>
    </div>
    <div class="mt-8">
      <a
        class="btn"
        href="https://www.linkedin.com/in/sahatsawat-kerdsawad"
        target="_blank">Let's connect!</a
      >
      <a
        href="https://github.com/GrungeElFz"
        target="_blank"
        class="btn btn-outline ml-5">Github</a
      >
    </div>
  </div>

  <div>
    <div class="text-3xl w-full font-bold mb-2">
      My Lastest Projects {"</>"}
    </div>
  </div>

  <div class="divider my-0"></div>
  <HorizontalCard
    title="Personal Site • Astro"
    img="/Banner-Gee.Personal.Site.png"
    desc="Astro • TypeScript • SCSS • Tailwind • DaisyUI • Markdown • HTML • Vite"
    url="https://github.com/GrungeElFz/Astro_Personal.Site"
  />
  <HorizontalCard
    title="Spotify Clone • SvelteKit"
    img="/Banner-SvelteKit_Spotify.Clone.png"
    desc="SvelteKit • TypeSctipt • JavaScript • SCSS • HTML • Vite • Spotify Web API"
    url="https://sveltekit-spotify-clone-livid.vercel.app"
    badge="NEW"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Landing Page • 0x01000111"
    img="/Banner-01000111.jpeg"
    desc="0x01000111 - Techno Producer • Disc Jockey"
    url="https://www.instagram.com/0x01000111"
    badge="Under Development"
  />

  <div>
    <div class="text-3xl w-full font-bold mb-5 mt-10">Linkedin Feed</div>
  </div>

  <div class="embedded-post">
    <iframe
      src="https://www.linkedin.com/embed/feed/update/urn:li:share:7063230638748831744"
      height="428"
      width="504"
      frameborder="0"
      allowfullscreen=""
      title="Embedded post"></iframe>
  </div>
</BaseLayout>

<style lang="scss">
  @use "@unsass/breakpoint";

  .embedded-post {
    position: relative;
    width: 100%;
    height: 100%;
    @include breakpoint.up("lg") {
      width: 100%;
      height: 50%;
      margin-bottom: 100%;
      padding-bottom: 25%;
    }
    @include breakpoint.down("lg") {
      width: 100%;
      height: 50%;
      margin-bottom: 100%;
      padding-bottom: 20%;
    }
    @include breakpoint.down("md") {
      width: 100%;
      height: 0;
      margin-bottom: 0;
      padding-bottom: 100%;
    }
    iframe {
      position: absolute;
      width: 100%;
      height: 100%;
    }
  }
</style>
