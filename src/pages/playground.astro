---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Playground">
  <div>
    <div class="text-3xl w-full font-bold mb-5">Playground</div>
  </div>
  <div class="divider my-0"></div>

  <div class="text-2xl py-3 font-bold">Weekly Favorite Tracks âœ¨</div>

  <iframe
    class="track"
    style="border-radius:12px"
    src="https://open.spotify.com/embed/track/1OFKbYgqjhZABC01KAMJ0n?utm_source=generator"
    width="100%"
    height="352"
    allowfullscreen=""
    allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"
    loading="lazy"></iframe>

  <iframe
    class="track"
    style="border-radius:12px"
    src="https://open.spotify.com/embed/track/72BLz6InabloEkFf7uI7kU?utm_source=generator&theme=0"
    width="100%"
    height="152"
    allowfullscreen=""
    allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"
    loading="lazy"></iframe>

  <iframe
    class="track"
    style="border-radius:12px"
    src="https://open.spotify.com/embed/track/5Wh9fhdvsDwJsQWuJkltXb?utm_source=generator&theme=0"
    width="100%"
    height="152"
    allowfullscreen=""
    allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"
    loading="lazy"></iframe>

  <div class="divider my-0"></div>

  <div class="wrapper-recently-played">
    <iframe
      id="recently-played"
      style="border-radius:12px"
      src="https://spotify-recently-played-readme.vercel.app/api?user=22dcwglm3hf3ocwavusfjj6fi&width=850"
      width="100%"
      height="100%"
      title="Recently Played"></iframe>
  </div>
</BaseLayout>

<style lang="scss">
  @use "@unsass/breakpoint";

  .track {
    margin-bottom: 2%;
  }
  .wrapper-recently-played {
    position: relative;
    margin-top: 2%;
    @include breakpoint.up("xl") {
      width: 53.5em;
      height: 21em;
      margin-bottom: 15%;
    }
    @include breakpoint.down("xl") {
      width: 41em;
      height: 16.1em;
      margin-bottom: 34%;
    }
    @include breakpoint.down("lg") {
      width: 40em;
      height: 15.7em;
      margin-bottom: 0;
    }
    @include breakpoint.down("md") {
      width: 32em;
      height: 12.65rem;
      margin-bottom: 40%;
    }
  }
</style>
